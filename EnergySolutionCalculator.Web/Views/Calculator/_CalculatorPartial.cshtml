@model PartialCalculatorViewModel
@{
}
<h1>Ez a partial</h1>

<div class="row">
	<div class="col-md-5">
		<form asp-controller="Calculator" asp-action="Calculate" asp-route-returnUrl="@ViewBag.ReturnUrl" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ElectricityBill"></label>
                <input asp-for="ElectricityBill" class="form-control" />
                <span asp-validation-for="ElectricityBill" class="text-danger"></span>
            </div>
			<div class="form-group">
				<label asp-for="RecommendedPanels"></label>
				<input asp-for="RecommendedPanels" class="form-control" />
				<span asp-validation-for="RecommendedPanels" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Output"></label>
				<input asp-for="Output" class="form-control" />
				<span asp-validation-for="Output" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Size"></label>
				<input asp-for="Size" class="form-control" />
				<span asp-validation-for="Size" class="text-danger"></span>
			</div>
			<button class="btn btn-default" type="submit">Mentés</button>
		</form>
	</div>
</div>