@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="nav-link text-dark navbar-right">
		<ul class="nav navbar-nav navbar-right">
			<li class="nav-item">
				<a class="nav-link text-dark">Hello @UserManager.GetUserName(User)!</a>
			</li>
			@if(User.IsInRole("Administrator"))
			{
				<li>
					<a class="nav-link dark-text">Admin</a>
				</li>
				<li><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Regisztráció</a></li>
			}
			<li class="nav-item">
				<button type="submit" class="btn nav-link text-dark">Kijelentkezés</button>
			</li>
		</ul>
	</form>
}
else
{
	<ul class="nav navbar-nav navbar-right">
		<li><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Belépés</a></li>
	</ul>
}